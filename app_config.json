{
    "app_info": {
        "name": "A3 Document Automation",
        "version": "1.0.0",
        "description": "Automated document processing with GPT-4o OCR and custom PDF templates",
        "author": "Your Name",
        "github_repo": "BackProAI/A3-handwriting-automation"
    },
    "update_settings": {
        "auto_check_updates": true,
        "check_frequency": "startup",
        "github_api_url": "https://api.github.com/repos/BackProAI/A3-handwriting-automation/releases/latest",
        "update_on_startup": false
    },
    "app_settings": {
        "window_size": "800x600",
        "theme": "default",
        "remember_window_position": true,
        "show_debug_info": false
    },
    "paths": {
        "templates_dir": "A3_templates",
        "output_dir": "output",
        "temp_dir": "temp",
        "config_dir": "config"
    },
    "ocr_settings": {
        "default_engine": "gpt4o",
        "image_preprocessing": true,
        "standardize_page_size": true,
        "target_width": 2480,
        "target_height": 3508
    }
}